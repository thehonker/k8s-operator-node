{
  "name": "@thehonker/k8s-operator",
  "version": "3.1.0",
  "description": "Build Kubernetes operators in NodeJS (and TypeScript)",
  "author": "Edwin Pers <pers.edwin@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/thehonker/k8s-operator-node"
  },
  "files": [
    "dist/*.ts",
    "dist/*.js",
    "dist/*.mjs",
    "dist/*.mts",
    "*.md"
  ],
  "license": "Apache-2.0",
  "main": "dist/operator.js",
  "module": "dist/operator.mjs",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/operator.d.mts",
        "default": "./dist/operator.mjs"
      },
      "require": {
        "types": "./dist/operator.d.ts",
        "default": "./dist/operator.js"
      }
    }
  },
  "types": "dist/operator.d.ts",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "@thehonker:registry": "https://npm.pkg.github.com/"
  },
  "dependencies": {
    "@kubernetes/client-node": "^1.1.0",
    "async": "^3.2.6",
    "gaxios": "^6.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/async": "^3.2.24",
    "@types/byline": "^4.2.36",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^18",
    "@types/ws": "^8.18.0",
    "eslint": "^9.22.0",
    "mkdirp": "^3.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  },
  "scripts": {
    "lint": "eslint ./src",
    "clean": "rm -Rf node_modules/ dist/",
    "build": "tsup src/ --format cjs,esm --dts",
    "watch": "tsup src/ --format cjs,esm --dts --watch",
    "prepare": "rm -Rf dist/ && npm run build"
  },
  "keywords": [
    "kubernetes",
    "k8s",
    "operator"
  ]
}
